{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() ~ " | " ~ title }}
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
			<div class="col-6 offset-3 d-flex flex-column justify-content-center align-items-center mt-3">
				<h1>Machins en promotion</h1>
				<div class="slider-container">
					<div class="image-container">
						{% for article in articles %}
							<img src="/images/{{ article.image }}" alt="{{ article.image }}"/>
						{% endfor %}
					</div>

					<i class="fa-solid fa-circle-chevron-left btn prev"></i>
					<i class="fa-solid fa-circle-chevron-right btn next"></i>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-12 text-center" style="height: 300px;">
				<h1>Machins les plus vendus</h1>
                    <p>{{ result }}</p>
			</div>
		</div>

		<div class="row">
			<div class="col-12 text-center" style="height: 250px;">
				<h1>Cat√©gories</h1>
			</div>
		</div>
	</div>

	<script src="js/script.js"></script>

{% endblock %}
